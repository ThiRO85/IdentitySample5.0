    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Id:")
        </dt>
        <dd id="Id">
        </dd>
        <dt>
            @Html.DisplayName("Nome:")
        </dt>
        <dd id="Nome">
        </dd>
        <dt>
            @Html.DisplayName("Dt Criação:")
        </dt>
        <dd id="DtCriacao">
        </dd>
        </dd>
        <dt>
            @Html.DisplayName("Qtd Usuarios:")
        </dt>
        <dd id="QtdUsuario">
        </dd>
        <dt>
            @Html.DisplayName("Ativo:")
