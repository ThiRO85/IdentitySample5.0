<div class="m-2 row">
    <div class="col-6">
        <button type="button" class="btn btn-secondary " data-toggle="modal" data-target="#Usuario_" id="adusuario"> Ad Usuario </button>
    </div>
</div>
<div class="row">
    <div class="col-3">
        @*@Html.Label("Filas:", new { @class = "control-label" }) Atenção!!! *@
